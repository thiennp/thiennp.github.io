{
  "name": "guardz-generator",
  "version": "1.12.3",
  "description": "Advanced TypeScript type guard generator with sophisticated recursion detection, enhanced enum handling, and comprehensive utility support using guardz 1.12.1 library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "guardz-generator": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "test": "npx jest",
    "dev": "ts-node src/cli.ts",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "tsc -p tsconfig.test.json --noEmit",
    "type-check-generated": "tsc -p tsconfig.generated.json --noEmit",
    "verify": "npm run type-check && npm run lint && npm run format:check",
    "generate-tests": "node scripts/generate-tests.js",
    "generate-tests:debug": "node scripts/generate-tests.js --debug",
    "generate-tests-with-config": "node dist/cli.js --config guardz.generator.config.ts generate && npm run verify",
    "test-snapshot": "node scripts/test-snapshot.js",
    "update-snapshot": "node scripts/update-snapshot.js",
    "test:e2e": "cd tests/e2e && npm test",
    "test:e2e:core": "cd tests/e2e && npm run test:core",
    "test:e2e:cli": "cd tests/e2e && npm run test:cli",
    "test:e2e:advanced": "cd tests/e2e && npm run test:advanced",
    "test:e2e:performance": "cd tests/e2e && npm run test:performance",
    "test:e2e:integration": "cd tests/e2e && npm run test:integration",
    "test:e2e:report": "cd tests/e2e && npm run report",
    "test:e2e:install": "cd tests/e2e && npm install",
    "test:e2e:setup": "npm run test:e2e:install && npm run build",
    "test:all": "npm run test && npm run test:e2e"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiennp/guardz-generator.git"
  },
  "keywords": [
    "typescript",
    "type",
    "guard",
    "typeguard",
    "generator",
    "codegen",
    "guardz",
    "recursion",
    "enum",
    "cycle-detection",
    "ast"
  ],
  "author": "Thien Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiennp/guardz-generator/issues"
  },
  "homepage": "https://github.com/thiennp/guardz-generator#readme",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/thiennp"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "glob": "^10.0.0",
    "guardz": "1.12.1",
    "lodash": "4.17.21",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/axios": "^0.9.36",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "4.17.20",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "axios": "^1.10.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0"
  },
  "files": [
    "dist",
    "!dist/**/_tests/**",
    "!dist/**/tests/**",
    "!dist/**/*.test.js",
    "!dist/**/*.spec.js"
  ]
}
